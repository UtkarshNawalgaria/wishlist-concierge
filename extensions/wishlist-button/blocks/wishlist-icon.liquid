  }
</style>

{% schema %}
{
  "name": "Wishlist Icon",
  "target": "section",
  "settings": [
    {
      "type": "checkbox",
      "label": "Only Show Icon",
      "id": "show_only_icon",
      "default": false
    },
    {
      "type": "color",
      "label": "Icon Color",
      "id": "icon_color",
      "default": "#ff0000"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Add to Wishlist"
    },
    {
      "type": "color",
      "label": "Button Text Color",
      "id": "button_text_color",
      "default": "#000"
    }
  ]
}
{% endschema %}

