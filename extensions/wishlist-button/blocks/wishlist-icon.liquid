<div id="wishlist-btn-block" x-data="{ wishlisted: false }">
  <div style="display: flex; gap: 10px; align-items: center;">
    <span class="wishlist-btn-icon" @click="wishlisted = !wishlisted">
      <svg xmlns="http://www.w3.org/2000/svg" :fill="wishlisted ? 'currentColor' : 'none'" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    </span>
    {% if block.settings.button_Text != blank or block.settings.show_only_icon == false %}
      <span class="wishlist-btn-text" x-text="wishlisted ? 'Item added to Wishlist' : '{{ block.settings.button_text }}'"></span>
    {% endif %}
  </div>
</div>

